---
import { marked } from 'marked';
import type { ShowcaseFrontmatter } from '../types';

export interface Props {
  title?: string;
  items: ShowcaseFrontmatter[];
  limit?: number;
  viewAllHref?: string;
}

const {
  title = 'Showcase',
  items = [],
  limit,
  viewAllHref,
} = Astro.props as Props;

const orderedItems = [...items].sort((a, b) => {
  const aOrder = a.order ?? Number.MAX_SAFE_INTEGER;
  const bOrder = b.order ?? Number.MAX_SAFE_INTEGER;
  return aOrder - bOrder;
});
const visibleItems = limit ? orderedItems.slice(0, limit) : orderedItems;

const renderMarkdown = (content?: string) =>
  content ? marked.parse(content) : '';
---

{visibleItems.length > 0 && (
  <section class='showcase-section'>
    <div class='section-header'>
      <h3 class='accent'>{title}</h3>
      {viewAllHref && (
        <a class='view-all' href={viewAllHref}>
          View all
        </a>
      )}
    </div>

    <div class='card'>
      <div class='showcase-grid'>
        {visibleItems.map((item) => {
          const dialogId = `showcase-dialog-${item.slug}`;
          return (
            <article class='showcase-card'>
              <button
                class='showcase-trigger'
                type='button'
                data-dialog-open={dialogId}
                aria-label={`Open ${item.title} details`}
              >
                <figure>
                  <img
                    src={item.image}
                    alt={item.imageAlt ?? item.title}
                    loading='lazy'
                  />
                </figure>
                <div class='showcase-meta'>
                  <div class='muted'>{item.category}</div>
                  <h4>{item.title}</h4>
                  {item.subtitle && <p class='subtitle'>{item.subtitle}</p>}
                  <p class='description'>{item.description}</p>
                  {item.timeline && <span class='timeline'>{item.timeline}</span>}
                </div>
              </button>

              <dialog id={dialogId} class='showcase-dialog'>
                <button
                  type='button'
                  class='dialog-close-icon'
                  data-dialog-close={dialogId}
                  aria-label='Close showcase dialog'
                >
                  âœ•
                </button>
                <div class='dialog-body'>
                  <img
                    src={item.image}
                    alt={item.imageAlt ?? item.title}
                    loading='lazy'
                  />
                  <div class='dialog-copy'>
                    <div class='muted'>{item.category}</div>
                    <h3>{item.title}</h3>
                    {item.subtitle && <p class='subtitle'>{item.subtitle}</p>}
                    {item.timeline && (
                      <p class='timeline muted'>{item.timeline}</p>
                    )}
                    {(item.details ?? item.description) && (
                      <div
                        class='dialog-markdown'
                        set:html={renderMarkdown(
                          item.details ?? item.description
                        )}
                      />
                    )}

                    <div class='dialog-footer'>
                      {item.url && (
                        <a
                          href={item.url}
                          target='_blank'
                          rel='noopener'
                          class='button-link'
                        >
                          Visit
                        </a>
                      )}
                      <button
                        type='button'
                        data-dialog-close={dialogId}
                        class='ghost-button'
                      >
                        Close
                      </button>
                    </div>
                  </div>
                </div>
              </dialog>
            </article>
          );
        })}
      </div>
    </div>

    <script is:inline>
      if (typeof window !== 'undefined' && !window.__showcaseDialogInit) {
        window.__showcaseDialogInit = true;
        const openers = document.querySelectorAll('[data-dialog-open]');
        const closers = document.querySelectorAll('[data-dialog-close]');
        const dialogs = document.querySelectorAll('dialog.showcase-dialog');

        const toggleBodyScroll = () => {
          const hasOpen = Array.from(dialogs).some((dialog) => dialog.open);
          document.documentElement.classList.toggle('modal-open', hasOpen);
          document.body.classList.toggle('modal-open', hasOpen);
        };

        openers.forEach((button) => {
          button.addEventListener('click', () => {
            const target = button.getAttribute('data-dialog-open');
            const dialog = target ? document.getElementById(target) : null;
            if (dialog && 'showModal' in dialog) {
              dialog.showModal();
              toggleBodyScroll();
            }
          });
        });

        const closeDialog = (button) => {
          const target = button.getAttribute('data-dialog-close');
          const dialog = target ? document.getElementById(target) : null;
          if (dialog && 'close' in dialog) {
            dialog.close();
            toggleBodyScroll();
          }
        };

        closers.forEach((button) => {
          button.addEventListener('click', () => closeDialog(button));
        });

        dialogs.forEach((dialog) => {
          dialog.addEventListener('click', (event) => {
            if (event.target === dialog) {
              dialog.close();
              toggleBodyScroll();
            }
          });

          dialog.addEventListener('close', toggleBodyScroll);
        });
      }
    </script>
  </section>
)}

<style>
  .showcase-section {
    margin-top: 32px;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
  }

  .view-all {
    font-size: 0.9rem;
    font-weight: 600;
    color: #60a5fa;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 16px;
  }

  .showcase-card {
    position: relative;
  }

  .showcase-trigger {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
    background: #0f1117;
    border: 1px solid #111827;
    border-radius: 16px;
    padding: 16px;
    cursor: pointer;
    color: inherit;
    text-align: left;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .showcase-trigger:hover,
  .showcase-trigger:focus-visible {
    border-color: #2563eb;
    outline: none;
    transform: translateY(-2px);
  }

  .showcase-trigger figure {
    margin: 0;
  }

  .showcase-trigger img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 1px solid #1f2937;
    object-fit: cover;
    aspect-ratio: 16 / 9;
  }

  .showcase-meta h4 {
    margin: 4px 0;
    font-size: 1.1rem;
  }

  .showcase-meta .subtitle {
    margin: 0;
    color: #93c5fd;
    font-size: 0.9rem;
  }

  .showcase-meta .description {
    margin: 8px 0 0 0;
    color: #d1d5db;
    font-size: 0.95rem;
  }

  .showcase-meta .timeline {
    display: inline-block;
    margin-top: 12px;
    font-size: 0.85rem;
    color: #9ca3af;
  }

  dialog.showcase-dialog {
    background: #0b0d10;
    border: 1px solid #1f2937;
    border-radius: 16px;
    padding: 0;
    max-width: 800px;
    width: calc(100% - 32px);
    color: #e5e7eb;
    max-height: 92vh;
    overflow: hidden;
    position: relative;
  }

  dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.75);
  }

  .dialog-body {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    max-height: 92vh;
  }

  .dialog-body img {
    width: 100%;
    border-radius: 16px 16px 0 0;
    border-bottom: 1px solid #1f2937;
  }

  .dialog-copy {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    max-height: 72vh;
    overflow-y: auto;
  }

  .dialog-footer {
    margin-top: 12px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  dialog.showcase-dialog::-webkit-scrollbar,
  .dialog-copy::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  dialog.showcase-dialog::-webkit-scrollbar-track,
  .dialog-copy::-webkit-scrollbar-track {
    background: #0f1117;
    border-radius: 999px;
  }

  dialog.showcase-dialog::-webkit-scrollbar-thumb,
  .dialog-copy::-webkit-scrollbar-thumb {
    background: #1f3b7a;
    border-radius: 999px;
  }

  dialog.showcase-dialog::-webkit-scrollbar-thumb:hover,
  .dialog-copy::-webkit-scrollbar-thumb:hover {
    background: #3156b3;
  }

  .dialog-markdown {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 4px 0 8px 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .dialog-markdown p {
    margin: 0;
    color: #d1d5db;
  }

  .dialog-markdown a {
    color: #93c5fd;
    text-decoration: underline;
  }

  .dialog-markdown ul,
  .dialog-markdown ol {
    margin: 0;
    padding-left: 20px;
    color: #d1d5db;
  }

  .button-link,
  .ghost-button {
    padding: 10px 16px;
    border-radius: 8px;
    font-weight: 600;
    border: 1px solid transparent;
    background: #111827;
    color: inherit;
    text-decoration: none;
    cursor: pointer;
  }

  .button-link {
    border-color: #2563eb;
    color: #bfdbfe;
    background: #1d4ed8;
  }

  .button-link:hover {
    background: #2563eb;
  }

  .ghost-button {
    border-color: #374151;
    background: transparent;
  }

  .dialog-close-icon {
    position: absolute;
    top: 12px;
    left: 12px;
    width: 32px;
    height: 32px;
    border-radius: 999px;
    border: 1px solid #1f2937;
    background: rgba(15, 17, 23, 0.8);
    color: #93c5fd;
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .dialog-close-icon:hover {
    border-color: #2563eb;
    color: #bfdbfe;
  }

  @media (min-width: 640px) {
    .dialog-body {
      grid-template-columns: 300px 1fr;
    }

    .dialog-body img {
      height: 100%;
      object-fit: cover;
      border-radius: 16px 0 0 16px;
      border-bottom: none;
      border-right: 1px solid #1f2937;
    }
  }
</style>

